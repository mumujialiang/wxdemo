.shop {
  background-color: #eeeeee;
  height: 100vh
}

.banner {
  width: 100%;
  height: 20vh;
}

.content {
  display: flex;
}

.nav {
  width: 25vw;
  background-color: #eeeeee;
}

.nav-item {
  box-sizing: border-box;
  padding: 15rpx;
  text-align: center;
  
}

.nav-item-active {
  color: red;
  background-color: #ffffff
}

.nav-inner {
  width: 100%;
  position: sticky;
  top: 0;
  z-index: 1;
  max-height: 100vh;
  padding-bottom: 50px
}

.goods-img {
  height: 15vh;
  width: 15vh;
}

.list {
  flex: 1;
  
  padding-bottom: 50px;
}
.list-item{
  margin-bottom: 15rpx
}

.sticky-title {
  position: sticky;
  top: 0;
  z-index: 1;
}
.title{
  padding:15rpx;
  box-sizing: border-box;
  background-color: #ffffff
}

.custom-class{
  background-color: #ffffff !important;
}